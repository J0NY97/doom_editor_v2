	event_help.c \
	event_update.c \
	event.c \
	event2.c \
	main.c \
	events.c \
	fps.c \
	entity_events.c \
	event_events.c \
	event_events2.c \
	grid_events.c \
	help.c \
	help2.c \
	help3.c \
	info_menu_events.c \
	init.c \
	init2.c \
	init3.c \
	init4.c \
	init5.c \
	init6.c \
	misc_window_events.c \
	point_events.c \
	point_help.c \
	point_help2.c \
	sector_events.c \
	sector_help.c \
	sector_help2.c \
	sector_help3.c \
	sector_ui.c \
	sector_ui2.c \
	sector.c \
	sector2.c \
	set_map_event.c \
	set_map_fc.c \
