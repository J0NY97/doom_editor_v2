	get_map.c \
	get_map2.c \
	get_map3.c \
	id_button_dropdown.c \
	free_help.c \

CDIR = .
ODIR = obj
OBJS = $(addprefix $(ODIR)/, $(SRCS:.c=.o))
JOHNNY = $(OBJS:.o=.d)

SDL_DIR		:= ../libs/SDL_WIN
SDL_INC		:= -I$(SDL_DIR)/include
SDL_LIB_DIR	:= -L$(SDL_DIR)/lib
SDL_LIB		:= -lSDL2 -lSDL2_ttf -lSDL2_image

LIB_FOLDER = ../libs

INCLUDES = \
	-I ../ \
	-I ../game/inc \
	-I$(LIB_FOLDER)/libft \
	-I$(LIB_FOLDER)/libpf \
	-I$(LIB_FOLDER)/libui \
	-I$(LIB_FOLDER)/libbxpm \
	-I$(LIB_FOLDER)/liblg \
	$(SDL_INC) \

LIB_FOLDERS = \
	-L$(LIB_FOLDER)/libft \
	-L$(LIB_FOLDER)/libpf \
	-L$(LIB_FOLDER)/libui \
	-L$(LIB_FOLDER)/libbxpm \
	-L$(LIB_FOLDER)/liblg \
	$(SDL_LIB_DIR) \

LIB = -lui $(SDL_LIB) -lpf -lft -lbxpm -llg -lm

FLAGS = -Wall -Wextra -Wno-unused-variable

all: $(ODIR) $(NAME)

-include $(JOHNNY)

$(ODIR):
	@mkdir -p $@

$(ODIR)/%.o: $(CDIR)/%.c
	@gcc -c $< -o $@ -MMD -O3 \
		$(INCLUDES) $(LIB_FOLDERS) $(LIB) $(FLAGS)
	@printf $(YELLOW)"\e[F\e[JCompiling $<\n"$(RESET)

$(NAME): $(OBJS)
	@gcc -o $(NAME) $(OBJS) $(INCLUDES) $(LIB_FOLDERS) $(LIB) $(FLAGS)
	@echo "$(NAME) was successfully created."

clean:
	@rm -rf $(ODIR)
	@echo "$(NAME) was cleaned."

fclean: clean
	@rm -f $(NAME)
	@echo "$(NAME) was fcleaned."

re: fclean $(LIBS) all

.PHONY: clean, all, re, fclean
