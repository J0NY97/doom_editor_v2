NAME = doom_editor
SRCS = \
	./args_parser.c \
	./bxpm.c \
	./draw.c \
	./draw2.c \
	./draw3.c \
	./entity.c \
	./entity2.c \
	./entity_help.c \
	./main.c \
	./events.c \
	./init.c \
	./point.c \
	./wall.c \
	./sector.c \
	./event.c \
	./sprite.c \
	./math.c \
	./set_map.c \
	./get_map.c \
	./help.c \
	./free_help.c \

OBJS = $(SRCS:.c=.o)

SDL_DIR		:= ../libs/SDL
SDL_INC		:= -I$(SDL_DIR)/include
SDL_LIB_DIR	:= -L$(SDL_DIR)/lib
SDL_LIB		:= -lSDL2 -lSDL2_ttf -lSDL2_image

LIB_FOLDER = ../libs

INCLUDES = \
	-I ../ \
	-I ../game/inc \
	-I$(LIB_FOLDER)/libft \
	-I$(LIB_FOLDER)/libpf \
	-I$(LIB_FOLDER)/libui \
	-I$(LIB_FOLDER)/libbxpm \
	$(SDL_INC) \

LIB_FOLDERS = \
	-L$(LIB_FOLDER)/libft \
	-L$(LIB_FOLDER)/libpf \
	-L$(LIB_FOLDER)/libui \
	-L$(LIB_FOLDER)/libbxpm \
	$(SDL_LIB_DIR) \

LIB = $(SDL_LIB) -lui -lpf -lft -lbxpm

FLAGS = -Wall -Wextra

all: $(NAME)

ODIR = .
CDIR = .

$(ODIR)/%.o: $(CDIR)/%.c
	@gcc -c $< -o $@ -MMD -O3 \
		$(INCLUDES) $(LIB_FOLDERS) $(LIB) $(FLAGS)
	@printf $(YELLOW)"\e[F\e[JCompiling $<\n"$(RESET)

$(NAME): $(SRCS)
	@gcc -O3 -o $(NAME) $(SRCS) $(INCLUDES) $(LIB_FOLDERS) $(LIB) $(FLAGS)
	@echo "$(NAME) was successfully created."

clean:
	@rm -f $(OBJS)
	@echo "$(NAME) was cleaned."

fclean:
	@rm -f $(NAME)
	@echo "$(NAME) was fcleaned."

re: fclean $(LIBS) all

.PHONY: clean, all, re, fclean
