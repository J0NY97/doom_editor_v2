RED		:= "\e[0;31m"
GREEN	:= "\e[0;32m"
YELLOW	:= "\e[0;33m"
BLUE	:= "\e[0;34m"
MAGENTA	:= "\e[0;35m"
CYAN	:= "\e[0;36m"
RESET	:= "\e[0m"

SRCS = \
	./args_parser.c \
	./bxpm.c \
	./draw.c \
	./draw2.c \
	./draw3.c \
	./entity.c \
	./entity2.c \
	./entity_help.c \
	./event_elem.c \
	./event_help.c \
	./event_update.c \
	./event.c \
	./event2.c \
	./main.c \
	./events.c \
	./entity_events.c \
	./event_events.c \
	./grid_events.c \
	./info_menu_events.c \
	./misc_window_events.c \
	./point_events.c \
	./sector_events.c \
	./spawn_events.c \
	./sprite_events.c \
	./texture_menu_events.c \
	./wall_events.c \
	./wall_visualizer.c \
	./init.c \
	./point.c \
	./wall.c \
	./sector.c \
	./sprite.c \
	./math.c \
	./set_map.c \
	./get_map.c \
	./get_map2.c \
	./get_map3.c \
	./id_button_dropdown.c \
	./help.c \
	./free_help.c \

NAME = doom_editor
ODIR = obj
CDIR = .
OBJS = $(addprefix $(ODIR)/,$(SRCS:.c=.o))
JHONNY = $(OBJS:.o=.d)

LIB_DIR =		../libs

INCLUDES =	\
		-I ../ \
		-I ../game/inc \
		-I $(LIB_DIR)/libft \
		-I $(LIB_DIR)/libpf \
		-I $(LIB_DIR)/libbxpm \
		-I $(LIB_DIR)/libui \
		-I $(LIB_DIR)/SDL_MAC/SDL2.framework/Headers \
		-I $(LIB_DIR)/SDL_MAC/SDL2_image.framework/Headers \
		-I $(LIB_DIR)/SDL_MAC/SDL2_ttf.framework/Headers \
		-F $(LIB_DIR)/SDL_MAC

LIB_FOLDERS =	\
		-L $(LIB_DIR)/libft -lft \
		-L $(LIB_DIR)/libpf -lpf \
		-L $(LIB_DIR)/libui -lui \
		-L $(LIB_DIR)/libbxpm -lbxpm \
		-framework SDL2 \
		-framework SDL2_image \
		-framework SDL2_ttf \
		-F $(LIB_DIR)/SDL_MAC

CFLAGS = -Wall -Wextra -MMD

all: $(ODIR) $(NAME)
	@printf $(GREEN)"\e[J[INFO] $(NAME) ready!\n"$(RESET)

-include $(JHONNY)

$(ODIR):
	@mkdir -p $@

$(ODIR)/%.o: $(CDIR)/%.c
	@printf $(YELLOW)"\e[JCompiling $<\n\e[F"$(RESET)
	@gcc -c $< -o $@ $(CFLAGS) $(INCLUDES)

$(NAME): $(OBJS)
	@gcc -o $(NAME) $(OBJS) $(INCLUDES) $(LIB_FOLDERS) $(CFLAGS)

clean:
	@printf $(CYAN)"[INFO] $(NAME) cleaned!\n"$(RESET)
	@rm -rf $(ODIR)

fclean: clean
	@rm $(NAME)

re: fclean all

.PHONY: clean, all, re, fclean
